<Page
    x:Class="ping.levelup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ping"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush Stretch="Fill" ImageSource="Assets/nature_background.jpg"/>
    </Page.Background>

    <Grid>
        <TextBlock Text="LEVEL UP!" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="50"/>
        <Button Content="Next>>" Foreground="Black" FontSize="25" HorizontalAlignment="Center" Height="68" Margin="0,200,0,0" VerticalAlignment="Center" Width="274" Background="Transparent" BorderBrush="Black" Click="Button_Click"/>
        <TextBlock Name="level" Width="Auto" HorizontalAlignment="Center" Height="Auto" Margin="0,102,0,0" TextWrapping="Wrap" FontSize="50" Text="TextBlock" VerticalAlignment="Top" Foreground="#FF0090B0" />
        <TextBlock Name="Score" Foreground="Green" Width="Auto" HorizontalAlignment="Center" Height="Auto" Margin="98,188,96,0" TextWrapping="Wrap" FontSize="40" Text="TextBlock" VerticalAlignment="Top" />

    </Grid>
</Page>
